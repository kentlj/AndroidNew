<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kent.shadow.com.learn.outlines.MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eaeaea"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#ffffff"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="5dp"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#FF0000"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:text="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                >


                <TextView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rec"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:text="8dp"
                    android:textColor="#88000000"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/cicle"
                    android:elevation="20dp"
                    android:gravity="center"
                    android:text="16dp"
                    android:textColor="#88000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:text="none"
                    android:outlineProvider="none"
                    android:textColor="#88000000"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle"
                    android:outlineProvider="background"
                    android:elevation="20dp"
                    android:gravity="center"
                    android:text="16dp"
                    android:textColor="#88000000"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="none"

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:outlineProvider="none"
                    android:elevation="10dp"
                    android:background="@drawable/circle"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="background"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:outlineProvider="background"
                    android:elevation="10dp"
                    android:background="@drawable/circle"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="bounds"

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:outlineProvider="bounds"
                    android:elevation="10dp"
                    android:background="@drawable/circle"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="paddedBounds"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:outlineProvider="paddedBounds"
                    android:elevation="10dp"
                    android:background="@drawable/circle"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_circle_1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="代码设置轮廓"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:outlineProvider="bounds"
                    android:elevation="10dp"
                    android:background="@drawable/circle"/>

                <TextView
                    android:id="@+id/tv_circle_2"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="代码设置轮廓，减小轮廓"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:outlineProvider="bounds"
                    android:elevation="10dp"
                    android:background="@drawable/circle"/>
            </LinearLayout>


            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cut1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="原始矩形"
                    android:textColor="#88000000"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:outlineProvider="bounds"
                    android:elevation="10dp"
                    android:background="#ff5722"/>

                <TextView
                    android:id="@+id/cut2"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="矩形剪裁成三角形"
                    android:textColor="#88000000"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:outlineProvider="paddedBounds"
                    android:elevation="10dp"
                    android:background="#ff5722"/>

                <TextView
                    android:id="@+id/cut3"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="矩形剪裁成圆形"
                    android:textColor="#88000000"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:outlineProvider="paddedBounds"
                    android:elevation="10dp"
                    android:background="#ff5722"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              >

                <TextView
                    android:id="@+id/cut4"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="矩形剪裁成菱形"
                    android:textColor="#88000000"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:outlineProvider="bounds"
                    android:elevation="10dp"
                    android:background="#ff5722"/>


                <TextView
                    android:id="@+id/cut5"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:text="扩大矩形的轮廓后剪裁"
                    android:textColor="#88000000"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:outlineProvider="paddedBounds"
                    android:elevation="10dp"
                    android:background="#ff5722"/>

                <TextView
                    android:id="@+id/cut6"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:text="减小矩形的轮廓后剪裁"
                    android:textColor="#88000000"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:outlineProvider="paddedBounds"
                    android:elevation="10dp"
                    android:background="#ff5722"/>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</FrameLayout>
