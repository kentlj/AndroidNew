<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/activity_content_transitions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.learn.transition.ContentTransitionsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@id/toolbar"
        android:elevation="@dimen/elevation_toolbar"
        android:background="?android:colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:title="Activity切换"
        app:titleTextAppearance="@style/TextView"
        app:navigationIcon="@drawable/ic_arrow_back"
        >

    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/image_bgg"
        android:src="@mipmap/bg_1"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@id/toolbar"
        android:layout_alignParentStart="true"
        android:contentDescription=""
        tools:ignore="ContentDescription"/>
    <TextView
        android:layout_below="@id/image_bgg"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:text="@string/cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>

